{
  StringBuffer regexBuffer=new StringBuffer();
  int braceCount=1;
  while (true) {
    char c=ci.next();
    if (c == '{') {
      braceCount++;
    }
 else     if (c == '}') {
      braceCount--;
      if (braceCount == 0)       break;
    }
    regexBuffer.append(c);
  }
  return regexBuffer.toString().trim();
}
