{
  System.out.println("Running testPerRequestSuspendTimeout");
  AsyncHttpClient c=new AsyncHttpClient();
  try {
    long t1=System.currentTimeMillis();
    Response r=c.prepareGet(urlTarget).execute().get(10,TimeUnit.SECONDS);
    assertNotNull(r);
    assertEquals(r.getStatusCode(),200);
    String resume=r.getResponseBody();
    assertEquals(resume,"perrequest");
    long current=System.currentTimeMillis() - t1;
    assertTrue(current > 5000 && current < 10000);
  }
 catch (  Exception e) {
    e.printStackTrace();
    fail(e.getMessage());
  }
  c.close();
}
