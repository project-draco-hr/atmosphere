{
  if (writeTimeoutInSecond != -1) {
    WriteOperation w=new WriteOperation(r,e);
    bc.getScheduledExecutorService().schedule(w,writeTimeoutInSecond,TimeUnit.MILLISECONDS);
    try {
      w.call();
    }
 catch (    Exception ex) {
      logger.warn("",ex);
    }
  }
 else {
    try {
      r.getAtmosphereHandler().onStateChange(e);
    }
 catch (    Throwable t) {
      onException(t,r);
    }
  }
}
