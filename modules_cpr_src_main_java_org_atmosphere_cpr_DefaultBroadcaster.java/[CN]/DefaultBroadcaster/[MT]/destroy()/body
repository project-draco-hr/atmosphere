{
  if (notifierFuture != null) {
    notifierFuture.cancel(true);
  }
  if (bc != null && scope != SCOPE.REQUEST) {
    bc.destroy();
  }
  if (broadcasterCache != null) {
    broadcasterCache.stop();
  }
  events.clear();
  messages.clear();
  delayedBroadcast.clear();
  broadcasterCache=null;
  started.set(false);
  destroyed.set(true);
}
