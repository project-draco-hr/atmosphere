{
  return new Runnable(){
    public void run(){
      Entry msg=null;
      try {
        msg=messages.take();
        bc.getExecutorService().submit(this);
        push(msg);
      }
 catch (      Throwable ex) {
        logger.error("failed to submit broadcast handler runnable to broadcast executor service",ex);
      }
 finally {
        if (msg != null) {
          if (msg.future instanceof BroadcasterFuture) {
            msg.future.done();
          }
 else {
            msg.future.cancel(true);
          }
        }
      }
    }
  }
;
}
