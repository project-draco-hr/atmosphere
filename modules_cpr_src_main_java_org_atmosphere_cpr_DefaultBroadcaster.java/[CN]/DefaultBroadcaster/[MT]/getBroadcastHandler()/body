{
  return new Runnable(){
    public void run(){
      Entry msg;
      try {
        msg=messages.take();
        bc.getExecutorService().submit(this);
        push(msg);
      }
 catch (      Throwable ex) {
        logger.debug("failed to submit broadcast handler runnable to broadcast executor service",ex);
      }
    }
  }
;
}
