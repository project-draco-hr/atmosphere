{
synchronized (this) {
    if (_continuation != null) {
      try {
        AtmosphereServlet.getBroadcasterConfig().getExecutorService().submit(new Runnable(){
          @Override public void run(){
            _continuation.resume();
          }
        }
).get();
      }
 catch (      Throwable t) {
      }
    }
    _continuation=null;
  }
}
