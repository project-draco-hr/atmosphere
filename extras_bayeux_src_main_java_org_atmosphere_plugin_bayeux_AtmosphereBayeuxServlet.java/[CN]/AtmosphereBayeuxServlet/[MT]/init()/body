{
  String refsThreshold=getInitParameter("refsThreshold");
  if (refsThreshold != null)   _refsThreshold=Integer.parseInt(refsThreshold);
  if (_refsThreshold > 0) {
    String server=getServletContext().getServerInfo();
    if (server.startsWith("jetty/6"))     _responseBuffer="org.mortbay.jetty.ResponseBuffer";
 else     if (server.startsWith("jetty/"))     _responseBuffer="org.eclipse.jetty.server.ResponseBuffer";
 else     _refsThreshold=0;
  }
  super.init();
}
