{
  forkJoinPool=new org.atmosphere.util.chmv8.ForkJoinPool(Runtime.getRuntime().availableProcessors(),new org.atmosphere.util.chmv8.ForkJoinPool.ForkJoinWorkerThreadFactory(){
    @Override public org.atmosphere.util.chmv8.ForkJoinWorkerThread newThread(    org.atmosphere.util.chmv8.ForkJoinPool pool){
      return new AtmosphereThreadFactoryJoin(pool);
    }
  }
,null,true);
  logger.info("Using ForkJoinPool. Set the {} to -1 to fully use its power.",ApplicationConfig.BROADCASTER_ASYNC_WRITE_THREADPOOL_MAXSIZE);
}
