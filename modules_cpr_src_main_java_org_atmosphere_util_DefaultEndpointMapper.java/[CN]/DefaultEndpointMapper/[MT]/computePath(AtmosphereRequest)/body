{
  String path;
  String pathInfo=null;
  try {
    pathInfo=req.getPathInfo();
  }
 catch (  IllegalStateException ex) {
  }
  if (pathInfo != null) {
    path=req.getServletPath() + pathInfo;
  }
 else {
    path=req.getServletPath();
  }
  if (path == null || path.isEmpty()) {
    path="/";
  }
  return path;
}
