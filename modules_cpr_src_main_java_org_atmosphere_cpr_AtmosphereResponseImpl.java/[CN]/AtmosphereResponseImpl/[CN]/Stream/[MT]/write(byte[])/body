{
  boolean b=forceAsyncIOWriter;
  try {
    validAsyncIOWriter();
    writeStatusAndHeaders();
    forceAsyncIOWriter=false;
    if (buffering) {
      writeWithBuffering(bytes);
    }
 else {
      asyncIOWriter.write(AtmosphereResponseImpl.this,bytes);
    }
  }
 catch (  IOException e) {
    handleException(e);
    throw e;
  }
 finally {
    forceAsyncIOWriter=b;
  }
}
