{
  super.action(r);
  if (r.action().type == Action.TYPE.RESUME) {
    Continuation c=ContinuationSupport.getContinuation(r.getRequest(),null);
    resumed.offer(c);
    if (config.getInitParameter(AtmosphereServlet.RESUME_AND_KEEPALIVE) == null || config.getInitParameter(AtmosphereServlet.RESUME_AND_KEEPALIVE).equalsIgnoreCase("false")) {
      c.resume();
    }
 else {
      try {
        r.getResponse().flushBuffer();
      }
 catch (      IOException e) {
      }
    }
  }
}
