{
  final AtmosphereResource r=(AtmosphereResource)config.properties().get(Thread.currentThread().getName() + AtmosphereResource.class.getSimpleName());
  if (r == null) {
    return null;
  }
  final AtmosphereRequest request=r.getRequest();
  return (AtmosphereRequest)Proxy.newProxyInstance(this.getClass().getClassLoader(),new Class[]{AtmosphereRequest.class},new ThreadLocalInvoker(){
{
      set(request);
    }
    @Override public Object invoke(    Object proxy,    Method method,    Object[] args) throws Throwable {
      return method.invoke(r,args);
    }
  }
);
}
