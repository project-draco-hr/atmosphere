{
  final AtmosphereResponse response=r.getResponse();
  if (r.transport().equals(AtmosphereResource.TRANSPORT.SSE)) {
    String contentType=response.getContentType();
    response.setContentType("text/event-stream");
    response.setCharacterEncoding("utf-8");
    PrintWriter writer=null;
    try {
      writer=response.getWriter();
    }
 catch (    IOException e) {
    }
    for (int i=0; i < 2000; i++) {
      writer.print(' ');
    }
    writer.print("\n");
    writer.flush();
    response.setContentType(contentType);
    response.asyncIOWriter(new AsyncIOWriter(){
      @Override public void redirect(      AtmosphereResponse r,      String location) throws IOException {
        r.sendRedirect(location);
      }
      @Override public void writeError(      AtmosphereResponse r,      int errorCode,      String message) throws IOException {
        r.sendError(errorCode);
      }
      @Override public void write(      AtmosphereResponse r,      String data) throws IOException {
        r.write("data:" + data + "\n\n");
      }
      @Override public void write(      AtmosphereResponse r,      byte[] data) throws IOException {
        r.write("data:").write(data).write("\n\n");
      }
      @Override public void write(      AtmosphereResponse r,      byte[] data,      int offset,      int length) throws IOException {
        r.write("data:").write(data,offset,length).write("\n\n");
      }
      @Override public void close(      AtmosphereResponse r) throws IOException {
        r.closeStreamOrWriter();
      }
      @Override public void flush(      AtmosphereResponse r) throws IOException {
        r.flushBuffer();
      }
    }
);
  }
  return Action.CONTINUE;
}
