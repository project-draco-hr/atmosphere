{
  if (path == null || path.isEmpty()) {
    throw new NullPointerException();
  }
  if (!path.startsWith("/")) {
    path="/" + path;
  }
  if (path.contains("*")) {
    path=path.replace("*",MAPPING_REGEX);
  }
  if (path.equals("/")) {
    path+=MAPPING_REGEX;
  }
  return broadcast(path,message,time,unit,delay,cacheMessage);
}
