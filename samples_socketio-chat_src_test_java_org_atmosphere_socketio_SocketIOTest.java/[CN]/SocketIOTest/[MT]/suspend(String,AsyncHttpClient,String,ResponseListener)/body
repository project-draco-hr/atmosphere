{
  log.debug(name + " go in suspend mode");
  Thread t=new Thread(){
    public void run(){
      try {
        client.prepareGet(url).execute(new AsyncCompletionHandlerAdapter(){
          @Override public com.ning.http.client.AsyncHandler.STATE onBodyPartReceived(          HttpResponseBodyPart content) throws Exception {
            return super.onBodyPartReceived(content);
          }
          @Override public Response onCompleted(          Response response) throws Exception {
            try {
              String body=new String(response.getResponseBodyAsBytes(),"UTF-8");
              log.debug(name + " Suspend onCompleted Body=" + body);
              if (listener != null) {
                listener.notify(body);
              }
            }
  finally {
            }
            return response;
          }
        }
).get();
      }
 catch (      InterruptedException e1) {
      }
catch (      Exception e) {
        e.printStackTrace();
      }
    }
  }
;
  t.start();
}
