{
  if (message == null) {
    logger.error("Message cannot be null");
    throw new WebApplicationException(400);
  }
  if (callback == null) {
    callback="alert";
  }
  String m="<script id='comet_" + counter++ + "'>"+ "window.parent."+ callback+ "("+ message+ ");</script>";
  Broadcastable b=new Broadcastable(m,bc);
  return b;
}
