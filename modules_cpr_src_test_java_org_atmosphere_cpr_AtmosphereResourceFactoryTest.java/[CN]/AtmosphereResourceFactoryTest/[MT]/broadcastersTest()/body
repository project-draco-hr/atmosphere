{
  Broadcaster b1=framework.getBroadcasterFactory().get("b1");
  Broadcaster b2=framework.getBroadcasterFactory().get("b2");
  AtmosphereResource r=framework.getAtmosphereConfig().resourcesFactory().create(framework.getAtmosphereConfig(),b1,AtmosphereResponse.newInstance().request(AtmosphereRequestImpl.newInstance()),mock(AsyncSupport.class),mock(AtmosphereHandler.class),AtmosphereResource.TRANSPORT.WEBSOCKET);
  r.suspend();
  assertNotNull(r);
  b2.addAtmosphereResource(r);
  assertNotNull(framework.getAtmosphereConfig().resourcesFactory().find(r.uuid()));
  assertEquals(2,framework.getAtmosphereConfig().resourcesFactory().broadcasters(r.uuid()).size());
}
